<%- include("../partials/header") %>

<div id="formContainer">
        <h1>Edit <%= campground.name %></h1>
        
        <form class="form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div id="input">
            <input required type="text" name="campground[name]" value="<%= campground.name %>">
            <input style="margin-top: 10px;" required type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
            <input required style="margin-top: 10px;" type="text"  name="campground[image]" value="<%= campground.image %>">
            <input style="margin-top: 10px;" type="text" name="campground[description]" value="<%= campground.description %>">
            <button id = "submit">Submit</button>
            <a href="/campgrounds">Back</a>
            </div>  
        </form>
    </div>

<%- include("../partials/footer") %>