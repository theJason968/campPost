<body>    
    <div id="popUp">
        <% if(error && error.length > 0) { %>
        <div class="flash">
            <p class="error"><%= error %></p>
        </div>
        <% } %>  
        <% if(success && success.length > 0) { %>
        <div class="flash">
            <p class="success"><%= success %></p>
        </div> 
        <% } %>  
    </div>
    
<div id="landingPage">
